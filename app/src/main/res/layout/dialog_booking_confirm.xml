<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="match_parent"
              android:background="@drawable/reminder_dialog_bachground"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/reminder_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.ptplanner.customviews.TitilliumSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/BookConfirm"
                android:textColor="#000000"
                android:textSize="18sp"/>


            <com.ptplanner.customviews.TitilliumLight
                android:id="@+id/txt_trainer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamalika Sarkar"
                android:textColor="#000000"
                android:textSize="17sp"/>


            <com.ptplanner.customviews.TitilliumLight
                android:id="@+id/txt_trainer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.00 - 7.00"
                android:textColor="#000000"
                android:textSize="17sp"/>


            <com.ptplanner.customviews.TitilliumLight
                android:id="@+id/txt_trainer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday 02 October 2015"
                android:textColor="#000000"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1B1B1"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_default"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ptplanner.customviews.TitilliumSemiBold
                    android:id="@+id/txt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_dialog_cancel"
                    android:textColor="#22A7F0"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:background="#B1B1B1"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_done"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_default"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ptplanner.customviews.TitilliumSemiBold
                    android:id="@+id/txt_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Book"
                    android:textColor="#22A7F0"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>