<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happywannyan.Activities.LoginActivity">


            <ImageView
                android:id="@+id/Logo"
                android:layout_marginTop="80dp"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_hapyywan" />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:id="@+id/LLOL2"
                android:layout_below="@+id/Logo"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EDX_code"
                    android:layout_width="match_parent"
                    android:hint="@string/Code"
                    android:textAllCaps="true"
                    android:inputType="textEmailAddress"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:id="@+id/LLOL"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/LLOL2"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/EDX_password"
            android:layout_width="match_parent"
            android:hint="@string/newPassword"

            android:inputType="textPassword"
            android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:layout_below="@+id/LLOL"
                android:id="@+id/Card_Ok"
                android:layout_marginTop="40dp"
                android:layout_width="210dp"
                android:onClick="onClick"
                android:layout_centerHorizontal="true"
                app:cardElevation="3dp"
                app:cardCornerRadius="23dp"
                app:cardBackgroundColor="@color/btn_red"
                android:layout_height="45dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <com.happywannyan.Font.SFNFTextView

                        android:layout_width="wrap_content"
                        android:text="@string/submit"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorwhite"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_right_arrow_white"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>







</RelativeLayout>
