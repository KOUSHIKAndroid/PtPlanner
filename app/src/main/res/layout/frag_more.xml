<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/more_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="14dp"
            android:background="#ffffff">

            <com.ptplanner.customviews.TitilliumSemiBold
                android:id="@+id/txt_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#22A7F0"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/ll_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_default"
                android:orientation="vertical"
                android:padding="3dp">

                <com.ptplanner.customviews.TitilliumLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/frag_more_hide"
                    android:textColor="#22A7F0"
                    android:textSize="20sp"/>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <com.ptplanner.customviews.TitilliumSemiBold
                        android:id="@+id/title_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/frag_more_description"
                        android:textColor="#333333"
                        android:textSize="17sp"/>

                    <com.ptplanner.customviews.TitilliumRegular
                        android:id="@+id/txt_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="17sp"/>

                    <com.ptplanner.customviews.TitilliumSemiBold
                        android:id="@+id/specifictext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/img_rightarrow"
                        android:singleLine="true"
                        android:text="Specifikt fÃ¶r dig"
                        android:textColor="#333333"
                        android:textSize="17sp"/>

                    <com.ptplanner.customviews.TitilliumRegular
                        android:id="@+id/instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="17sp"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
