        <com.happywannyan.Utils.cardstack.SwipeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.happywannyan.Utils.cardstack.SwipeDeck
                android:id="@+id/swipe_deck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorwhite"
                android:padding="10dp"
                swipedeck:card_spacing="5dp"
                swipedeck:max_visible="1"
                swipedeck:render_above="true"
                swipedeck:rotation_degrees="15" />

        </com.happywannyan.Utils.cardstack.SwipeFrameLayout>

        <ImageView
            android:id="@+id/IMG_Left"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_swipe_left" />

        <ImageView
            android:id="@+id/IMG_Right"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_swipe_right" />


