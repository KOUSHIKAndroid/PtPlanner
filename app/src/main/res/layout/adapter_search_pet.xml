<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/img_card_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            card_view:cardCornerRadius="10dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </android.support.v7.widget.CardView>


        <com.happywannyan.Font.SFNFTextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:text="297 Review"
            android:textColor="@color/Black"
            android:textSize="14sp" />


        <com.happywannyan.Font.SFNFTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/img_card_view"
            android:text="some is lorem"
            android:textAllCaps="true"
            android:textColor="@color/Black"
            android:textSize="14sp" />


        <RatingBar
            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_review"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:numStars="5"
            />

        <com.happywannyan.Font.SFNFTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/rating_bar"
            android:layout_toRightOf="@id/img_card_view"
            android:text="John Doe"
            android:textAllCaps="true"
            android:textColor="@color/Black"
            android:textSize="12sp" />


        <com.happywannyan.Font.SFNFTextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_card_view"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do eiusmod tempor incididunt et dolore manga aliqua.Ut enim add minim veniam,quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo"
            android:textColor="@color/Black"
            android:textSize="12sp" />


        <com.happywannyan.Font.SFNFBoldTextView
            android:id="@+id/tv_service_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_details"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/Black"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="Service Name" />

        <View
            android:id="@+id/view_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_service_"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray_project" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_horizontal_line"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_place"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_place_search_pet_adapter" />


            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_place"
                android:text="Tokyo,Japan"
                android:textColor="@color/text_dark_gray"
                android:textSize="12sp" />


            <com.happywannyan.Font.SFNFBoldTextView
                android:id="@+id/tv_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="@color/btn_red"
                android:layout_alignParentRight="true"
                android:text="price" />


            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_Price"
                android:text="30 Minutes"
                android:textColor="@color/text_dark_gray"
                android:textSize="12sp" />


        </RelativeLayout>


    </RelativeLayout>


    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/gray_project" />

</LinearLayout>