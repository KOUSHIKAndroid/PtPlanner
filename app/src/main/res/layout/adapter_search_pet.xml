<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/img_card_view"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                card_view:cardCornerRadius="10dp">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>


            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_days"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Day's ago"
                android:textColor="@color/text_dark_gray"
                />


            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textSize="14sp"
                android:layout_toLeftOf="@id/tv_days"
                android:layout_toRightOf="@id/img_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="some is lorem"
                android:textColor="@color/Black"
                android:textAllCaps="true"/>


            <android.support.v7.widget.AppCompatRatingBar
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/tv_days"
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="@color/RatingColor"
                android:isIndicator="false" />

            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/rating_bar"
                android:layout_toRightOf="@id/img_card_view"
                android:layout_below="@+id/tv_title"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/Black"
                android:textAllCaps="true"/>



            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_details"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:layout_below="@+id/img_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:minLines="5"
                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do eiusmod tempor incididunt et dolore manga aliqua.Ut enim add minim veniam,quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo"/>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/tv_details"
            android:id="@+id/view_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_project"/>


        <RelativeLayout
            android:layout_below="@id/view_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_place"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_place_search_pet_adapter"/>

            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="297 Review"
                android:textColor="@color/Black"
                android:textSize="12sp"
               android:layout_alignParentRight="true"
                />


            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_address"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_place"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="Tokyo,Japan"
                android:textSize="12sp"
                android:textColor="@color/text_dark_gray"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view_vertical_line"
                android:layout_toRightOf="@id/tv_address"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/text_dark_gray"/>


            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/tv_time"
                android:layout_toRightOf="@id/view_vertical_line"
                android:layout_toLeftOf="@id/tv_review"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="30 Minutes"
                android:textSize="12sp"
                android:textColor="@color/text_dark_gray"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </RelativeLayout>


    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/gray_project"/>

</LinearLayout>