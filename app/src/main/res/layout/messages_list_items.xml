<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:clickable="false">
            </ImageView>

            <com.ptplanner.customviews.HelveticaSemiBoldLight
                android:id="@+id/imageviewreddotnumberofchat"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/reddotbg"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="visible">
            </com.ptplanner.customviews.HelveticaSemiBoldLight>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <com.ptplanner.customviews.TitilliumSemiBold
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:clickable="false"
                android:singleLine="true"
                android:textColor="#9022A7F0"
                android:textSize="14sp"/>

            <com.ptplanner.customviews.TitilliumSemiBold
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/current_time"
                android:clickable="false"
                android:singleLine="true"
                android:textColor="#282828"
                android:textSize="16sp"
                android:textStyle="bold">
            </com.ptplanner.customviews.TitilliumSemiBold>

            <com.ptplanner.customviews.TitilliumRegular
                android:id="@+id/user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:clickable="false"
                android:singleLine="true"
                android:textColor="#282828"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="0dp"
        android:background="#BFBFBF"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>
