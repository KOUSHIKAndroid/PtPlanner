<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happywannyan.Activities.Booking.BookingDetails">
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/img_serch_top_backg"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <RelativeLayout
        android:id="@+id/RL_HEADER"
        android:layout_width="395dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/cast_expanded_controller_margin_between_status_text_and_seek_bar"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/IMG_icon_back"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_arrow_back_white" />

        <com.happywannyan.Font.SFNFTextView
            android:id="@+id/PAGE_Titile"
            android:layout_toRightOf="@+id/IMG_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/page_titiel" />
    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RL_HEADER"
        android:background="@color/colorwhite"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/btn_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:id="@+id/img_card_view"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    card_view:cardCornerRadius="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>


                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="37dp"
                    android:layout_toRightOf="@id/img_card_view"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorwhite"
                    android:textSize="16sp" />

                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_card_view"
                    android:text="Lee Shung Yang"
                    android:textAllCaps="true"
                    android:textColor="@color/colorwhite"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/LLStartEndDateBookingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_card_view"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.happywannyan.Font.SFNFTextView
                        android:id="@+id/tv_start_date_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Start date"
                        android:textColor="@color/gray_project"
                        android:textSize="12sp" />


                    <com.happywannyan.Font.SFNFTextView
                        android:id="@+id/tv_end_date_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End date"
                        android:textColor="@color/gray_project"
                        android:textSize="12sp" />


                    <com.happywannyan.Font.SFNFTextView
                        android:id="@+id/tv_booking_id_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Booking Id"
                        android:textColor="@color/gray_project"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLStartEndDateBookingValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LLStartEndDateBookingName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.happywannyan.Font.SFNFBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="SEP 20,2017"
                        android:textColor="@color/colorwhite"
                        android:textSize="12sp" />


                    <com.happywannyan.Font.SFNFBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SEP 27,2017"
                        android:textColor="@color/colorwhite"
                        android:textSize="12sp" />

                    <com.happywannyan.Font.SFNFBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="201705045916"
                        android:textColor="@color/colorwhite"
                        android:textSize="12sp" />
                </LinearLayout>


                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LLStartEndDateBookingValue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Service"
                    android:textColor="@color/colorwhite"
                    android:textSize="12sp" />


                <com.happywannyan.Font.SFNFBoldTextView
                    android:id="@+id/tv_service_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_service_name"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorwhite"
                    android:layout_marginTop="10dp"
                    android:text="Day Care for Cats"
                    android:textAllCaps="true"
                    android:textSize="12sp" />


                <View
                    android:id="@+id/horizontal_line_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_service_value"
                    android:layout_marginTop="20dp"
                    android:background="#9F2C3A" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/horizontal_line_one"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <com.happywannyan.Font.SFNFTextView
                            android:id="@+id/tv_total_pets_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pet's"
                            android:textColor="@color/gray_project"
                            android:textSize="12sp" />

                        <com.happywannyan.Font.SFNFTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="1"
                            android:textSize="12sp"
                            android:textColor="@color/colorwhite"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <com.happywannyan.Font.SFNFTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="12sp"
                            android:textColor="@color/gray_project"/>

                        <com.happywannyan.Font.SFNFTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="2100"
                            android:textSize="12sp"
                            android:textColor="@color/colorwhite"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <com.happywannyan.Font.SFNFBoldTextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Pet(s) Details"
                android:textAllCaps="true"
                android:textColor="@color/Black"
                android:textSize="16sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:id="@+id/img_card_view_pets"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    card_view:cardCornerRadius="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_view_pets"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>


                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_name_pet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="37dp"
                    android:layout_toLeftOf="@+id/img_edit"
                    android:layout_toRightOf="@+id/img_card_view_pets"
                    android:text="Name"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14sp" />

                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_pet_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_pet"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/img_edit"
                    android:layout_toRightOf="@+id/img_card_view_pets"
                    android:text="Ghanta"
                    android:textAllCaps="true"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/horizontal_line_one_pets"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/img_card_view_pets"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_project" />

                <LinearLayout
                    android:id="@+id/LLYearMonthGenderSizeValuePets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/horizontal_line_one_pets"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <com.happywannyan.Font.SFNFBoldTextView
                        android:id="@+id/tv_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="1"
                        android:textColor="@color/Black"
                        android:textSize="16sp" />


                    <com.happywannyan.Font.SFNFBoldTextView
                        android:id="@+id/tv_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/Black"
                        android:textSize="16sp" />


                    <com.happywannyan.Font.SFNFBoldTextView
                        android:id="@+id/tv_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Male"
                        android:textColor="@color/Black"
                        android:textSize="16sp" />

                    <com.happywannyan.Font.SFNFBoldTextView
                        android:id="@+id/tv_breed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Akita"
                        android:textColor="@color/Black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLYearMonthGenderSizeName_pets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LLYearMonthGenderSizeValuePets"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <com.happywannyan.Font.SFNFTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/adapter_your_pets_year"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp" />


                    <com.happywannyan.Font.SFNFTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/adapter_your_pets_month"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp" />


                    <com.happywannyan.Font.SFNFTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/adapter_your_pets_gender"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp" />

                    <com.happywannyan.Font.SFNFTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/breed"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp" />
                </LinearLayout>


                <View
                    android:id="@+id/horizontal_line_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/LLYearMonthGenderSizeName_pets"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_project" />


                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_size_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/horizontal_line_two"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="SIZE"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark_gray"/>

                <com.happywannyan.Font.SFNFBoldTextView
                    android:id="@+id/tv_size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/horizontal_line_two"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Small(10-20kg)"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_toRightOf="@+id/tv_size_name" />


                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_describe_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="13sp"
                    android:text="Describe your dog"/>


                <com.happywannyan.Font.SFNFTextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_describe_value"
                    android:layout_below="@id/tv_describe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit ,sed do eiusmod tempor incididunt ut labore et dolore manga aliqua.Ut enim ad minim veniam,quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo"/>


                <View
                    android:id="@+id/horizontal_line_three_pets"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_describe_value"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_project" />


                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_question_one"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/horizontal_line_three_pets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="is your dog spayed or neutered?"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark_gray"/>


                <com.happywannyan.Font.SFNFTextView
                    android:textColor="@color/Black"
                    android:id="@+id/tv_answer_one"
                    android:layout_below="@+id/tv_question_one"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Yes"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />





                <com.happywannyan.Font.SFNFTextView
                    android:id="@+id/tv_question_two"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/tv_answer_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="is your dog spayed or neutered?"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark_gray"/>


                <com.happywannyan.Font.SFNFTextView
                    android:textColor="@color/Black"
                    android:id="@+id/tv_answer_two"
                    android:layout_below="@+id/tv_question_two"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="No"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:weightSum="2"
                    android:layout_below="@+id/tv_answer_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view_message"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="23dp"
                        card_view:cardElevation="3dp"
                        card_view:cardBackgroundColor="@color/btn_red"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_chevron_right_white"/>

                            <com.happywannyan.Font.SFNFBoldTextView
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Message"
                                android:textSize="18sp"
                                android:textColor="@color/colorwhite"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view_cancel"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="23dp"
                        android:layout_marginLeft="15dp"
                        card_view:cardElevation="3dp"
                        card_view:cardBackgroundColor="#0B6C8C"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            >

                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_chevron_right_white"/>

                            <com.happywannyan.Font.SFNFBoldTextView
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textSize="18sp"
                                android:textColor="@color/colorwhite"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
